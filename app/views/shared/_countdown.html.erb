<div id="countdown">
    <script>
        $(document).ready(function()
        {
            $('#clock').countdown('<%= current_user.trial_end_date.strftime("%Y/%m/%d") %>', function(event) {
                $(this).html('<div><div>' + event.strftime('%D') + '</div><span>Day</span></div><div><div>' + event.strftime('%H') + '</div><span>Hour</span></div><div><div>' + event.strftime('%M') + '</div><span>Minute</span></div><div><div>' + event.strftime('%S') + '</div><span>Second</span></div>');
            });
        });
    </script>
    <p>Your free trial will be ending in:</p>
    <span id="clock"></span>
</div>