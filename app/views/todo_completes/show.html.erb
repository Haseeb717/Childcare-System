<h2><%= @todo.title %></h2>
Iteration Type: <%= @todo.iteration_type %><br>
Frequency: <%= @todo.frequency %><br>
Started todo: <%= @todo_complete.created_at %><br>
Todo status: <%= @todo_complete.complete? ? "Complete" : "In Progress" %>
<h3>Tasks</h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Result</th>
      <th>Completion date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_complete.task_completes.each do |tkc| %>
      <tr>
        <td><%= tkc.todo_task.title %></td>
        <td><%= tkc.todo_task.description %></td>
        <td><%= tkc.result %></td>
        <td><%= tkc.completion_date %></td>
        <td>
          <% unless tkc.pass? %>
            <%= link_to 'Complete', todo_task_complete_path(tkc), method: :patch %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>