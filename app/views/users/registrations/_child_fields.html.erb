<div class="fields">
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :birth_date %><br>
    <%= f.datetime_select :birth_date %>
  </div>

  <div class="form-group">
    <%= f.fields_for :profile_image do |profile_image| %>
      <%= profile_image.label 'Profile Image' %><br>
      <%= profile_image.file_field :file %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :department %><br />
    <%= f.collection_select :department_id, [], :id, :name, { prompt: true }, { :class => "department-select" } %>
  </div>
  <%= custom_link_to_remove_fields "Remove", f %>
</div>