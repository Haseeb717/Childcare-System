<div class="fields">
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%= f.hidden_field :task_type, value: 'local' %>
    <%= custom_link_to_remove_fields "Remove", f %>
</div>