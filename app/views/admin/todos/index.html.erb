<p id="notice"><%= notice %></p>

<h1>Listing global Todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Iteration type</th>
      <th>Frequency</th>
      <th>Daycare</th>
      <th>Type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.iteration_type %></td>
        <td><%= todo.frequency %></td>
        <td><%= todo.daycare.try(:name) %></td>
        <td><%= todo.global? ? "Global" : "Local" %></td>
        <td><%= todo.user.name %></td>
        <td><%= link_to 'Edit', edit_admin_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', [:admin, todo], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

