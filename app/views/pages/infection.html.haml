#legacy-back-one
  .container.back-page-content
    .row.back-page
      .col-md-12
        .infect-heading
          = image_tag 'back_page.png'
          %h2 Infection risk assessment
          %p Detect the level of infection risk in your facility
      .col-md-6.left-side
        - @subjects.each do |subject|
          .single
            = image_tag subject.icon.file.thumb
            = image_tag 'back_one.png'
            %h2= subject.title
            %p= subject.description
            %h4.click-here
              - if current_user.manager?
                = link_to 'Click here to access infection risk assessment for this module', results_subject_path(subject)
              - else
                = link_to 'Click here to access infection risk assessment for this module', new_subject_attempt_path(subject)